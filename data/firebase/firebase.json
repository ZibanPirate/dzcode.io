{
  "hosting": [
    {
      "target": "data.zakiii.com",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "**/*",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "https://www.zakiii.com"
            },
            { "key": "Cache-Control", "value": "no-cache" }
          ]
        }
      ]
    },
    {
      "target": "data.stage.zakiii.com",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "**/*",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "https://stage.zakiii.com"
            },
            { "key": "Cache-Control", "value": "no-cache" }
          ]
        }
      ]
    }
  ]
}
